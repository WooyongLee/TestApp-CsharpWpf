<Window x:Class="IPCTest.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPCTest"
        mc:Ignorable="d"
        Title="ClientWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="ClientMessageTextBox" MinWidth="100" Margin="5"></TextBox>
                <Button x:Name="ClientMessageSendButton" Content="Send" Width="50" Margin="5" Click="ClientMessageSendButton_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
