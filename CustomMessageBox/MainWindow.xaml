<Window x:Class="CustomMessageBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomMessageBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="0, 20, 0, 0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBox x:Name="InputTextBox" Text="InputText" Width="400" Height="121" Margin="58,0,59,0"></TextBox>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Width="80" Height="30" Click="Button_Click">MsgBox1</Button>
            <Button Width="80" Height="30" Click="Button_Click_1">MsgBox2</Button>
            <Button Width="80" Height="30" Click="Button_Click_2">Notifi.</Button>
        </StackPanel>
    </Grid>
</Window>
