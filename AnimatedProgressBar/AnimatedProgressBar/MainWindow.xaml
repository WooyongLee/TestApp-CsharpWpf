<Window x:Class="AnimatedProgressBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <Button x:Name="ProgressButton" Margin="5" Width="80" Height="40" Click="ProgressButton_Click">Progress Click</Button>
            <Button x:Name="OneButton" Margin="5" Width="80" Height="40" Click="OneButton_Click">1</Button>
            <Button x:Name="TwoButton" Margin="5" Width="80" Height="40" Click="TwoButton_Click">2</Button>
        </StackPanel>
    </Grid>
</Window>
